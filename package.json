{
  "name": "openapi-fastify-jwt",
  "version": "1.0.0",
  "description": "A sample Fastify API with RSA256 JWT authentication",
  "type": "module",
  "main": "app.js",
  "license": "CC0-1.0",
  "author": "Heroku DevRel <heroku-dev-advocacy@salesforce.com>",
  "scripts": {
    "start": "fastify start -a :: -l info app.js",
    "dev": "fastify start -w -l info -P app.js",
    "test": "vitest --reporter=verbose --no-watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write .",
    "prettier:verify": "prettier --check .",
    "generate:jwt": "node utils/generate_jwt.js",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@fastify/auth": "^4.6.1",
    "@fastify/autoload": "^5.8.0",
    "@fastify/jwt": "^8.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "dotenv": "^16.4.5",
    "fast-jwt": "^4.0.1",
    "fastify": "^4.26.2",
    "fastify-cli": "^6.1.1",
    "fastify-plugin": "^4.5.1",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "vitest": "^1.5.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "volta": {
    "node": "20.15.1",
    "npm": "10.8.2"
  }
}
